    cout << "The largest dollar amount is $" << largest << ". You should pick the ";
    if (isFirstLargest && isSecondLargest && isThirdLargest) {
        cout << "first, second, or third amount. They are all equal.";
    } else {
        if (isFirstLargest) cout << "first";
        if (isFirstLargest && isSecondLargest) cout << " or ";
        if (isSecondLargest) cout << "second";
        if ((isFirstLargest || isSecondLargest) && isThirdLargest) cout << " or ";
        if (isThirdLargest) cout << "third";
        cout << " amount";
        if (isFirstLargest && isSecondLargest) cout << ". The first and second amounts are equal.";
        else if (isFirstLargest && isThirdLargest) cout << ". The first and third amounts are equal.";
        else if (isSecondLargest && isThirdLargest) cout << ". The second and third amounts are equal.";
        else cout << ".";
    }
